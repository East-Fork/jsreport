    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Yarn Workspace Test",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "yarn",
            "args": [
                "workspace",
                "${input:targetPkgName}",
                "test"
            ],
            "envFile": "${workspaceFolder}/launch.env",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Run Yarn Workspace build",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "yarn",
            "args": [
                "workspace",
                "${input:targetPkgName}",
                "build"
            ],
            "envFile": "${workspaceFolder}/launch.env",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run jsreport server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "envFile": "${workspaceFolder}/launch.env",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run jsreport compile",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/compile.js",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to node on port",
            "port": 9230,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "type": "node"
        }
    ],
    "inputs": [
        {
            "id": "targetPkgName",
            "type": "promptString",
            "description": "Name of the target package in workspace to run tests against",
            "default": "@jsreport/jsreport-"
        }
    ]
}
